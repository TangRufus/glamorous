<%= content_for :header_title, Issue.model_name.human %>

<!-- Issues Content -->
<div class="row">
  <div class="col-md-4 col-lg-3">

    <%= render 'issues/menu' %>

  </div>
  <div class="col-md-8 col-lg-9">
    <!-- Issues Block -->
    <div class="block">
      <!-- Issues Title -->
      <div class="block-title clearfix">
        <h2>话题列表</h2>
      </div>
      <!-- END Issues Title -->

        <!-- Issues List -->
        <div id="issues-list">
          <div class="block-content-full">
            <div class="table-responsive remove-margin-bottom">
              <table class="table table-striped table-vcenter remove-margin-bottom">
                <thead>
                  <tr>
                    <th class="text-center">编号</th>
                    <th><%= Issue.human_attribute_name('status') %></th>
                    <th><%= Issue.human_attribute_name('title') %></th>
                    <th class="text-center"><i class="fa fa-comments"></i></th>
                  </tr>
                </thead>
                <tbody>
                  <%= render @issues %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- END Issues List -->
    </div>
    <!-- END Issues Block -->
  </div>
</div>
<!-- END Issues Content -->
